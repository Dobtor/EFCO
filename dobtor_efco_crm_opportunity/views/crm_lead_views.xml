<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <record id="efco_crm_oppor_extend" model="ir.ui.view">
            <field name="name">efco_crm_oppor_extend.form</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_case_form_view_oppor"/>
            <field name="arch" type="xml">
                <!-- <xpath expr="//field[@name='partner_id']" position="before">
                    <field name="product_id"/>
                </xpath> -->
                <xpath expr="//group" position="after">
                        <label for="expected_income_id"/>
                        <field name="expected_income_id" context="{'only_product_name': True, 'default_only_product_name': True}">
                            <tree string="expected income" editable="top">
                                <field name="sequence" widget="handle"/>
                                <field name="article_number"  options="{'no_create_edit': True}"/>
                                <field name="new_part_code" options="{'no_create_edit': True}"/>
                                <field name="product_id" context="{'only_product_name': True, 'default_only_product_name': True}"/>
                                <field name="year"/>
                                <field name="quarterly" />
                                <field name="quantity" />
                                <field name="amount" />
                                <field name="Total_price" />
                            </tree>
                        </field>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
