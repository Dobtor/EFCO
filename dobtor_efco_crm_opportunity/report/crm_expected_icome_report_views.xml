<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="crm_expercted_income_tree" model="ir.ui.view">
            <field name="name">crm.expercted.income.tree</field>
            <field name="model">crm.expected.income</field>
            <field name="arch" type="xml">
                <tree string="Forecast" create="false" delete="false">
                    <field name="partner_id"/>
                    <field name="opp_id"/>
                    <field name="end_customer"/>
                    <field name="crm_lead_id"/>
                    <field name="article_number"/>
                    <field name="new_part_code"/>
                    <field name="product_id"/>
                    <field name="amount"/>
                    <field name="stage_id"/>
                    <field name="saleperson" string="Account Manager"/>
                    <field name="region"/>
                    <field name="business_line"/>
                    <field name="year"/>
                    <field name="q1_quantity" string="Q1 Fcst QTY"/>
                    <field name="q1_total_price"/>
                    <field name="q2_quantity" string="Q2 Fcst QTY"/>
                    <field name="q2_total_price"/>
                    <field name="q3_quantity" string="Q3 Fcst QTY"/>
                    <field name="q3_total_price"/>
                    <field name="q4_quantity" string="Q4 Fcst QTY"/>
                    <field name="q4_total_price"/>
                </tree>
            </field>
        </record>

        <record id="crm_expercted_income_seach" model="ir.ui.view">
            <field name="name">crm.expercted.income.filter</field>
            <field name="model">crm.expected.income</field>
            <field name="arch" type="xml">
                <search string="Filter">
                    <field name="saleperson" string="Sale Person"/>
                    <field name="crm_lead_id" string="Opportunity Name"/>
                </search>
            </field>
        </record>

        <record id="action_crm_expected_income" model="ir.actions.act_window">
            <field name="name">Forecast</field>
            <field name="res_model">crm.expected.income</field>
            <field name="view_mode">tree</field>
            <!-- <field name="domain">[('saleperson','=',uid)]</field> -->
            <field name="context">{'tree_view_ref': 'dobtor_efco_crm_opportunity.efco_expercted_income_tree',}</field>
        </record>

        <menuitem id="my_crm_expected_icome_menu" name="Forecast" parent="sales_team.menu_sales" sequence="4" action="action_crm_expected_income"/>

        <record id="action_crm_expected_income_pivot" model="ir.actions.act_window">
            <field name="name">Exepected Income</field>
            <field name="res_model">crm.expected.income</field>
            <field name="view_mode">tree</field>
            <field name="domain">[]</field>
            <field name="context">{'tree_view_ref': 'dobtor_efco_crm_opportunity.efco_expercted_income_tree',}</field>
        </record>

        <menuitem id="crm_expected_icome_report_menu" name="Expected Income" groups="sales_team.group_sale_manager" parent="sales_team.menu_sale_report" action="action_crm_expected_income_pivot" sequence="24"/>

    </data>
</odoo>
