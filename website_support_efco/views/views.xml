<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record id="website_support_efco_view_form" model="ir.ui.view">
      <field name="name">website.support.efco.form.view</field>
      <field name="model">website.support.ticket</field>
      <field name="inherit_id" ref="website_support.website_support_ticket_view_form"/>
      <field name="arch" type="xml">
        <xpath expr="//group" position="after">
          <separator string="Module" colspan="1"/>
          <field name="ticket_model">
            <tree editable="bottom">
              <field name="model_description"/>
            </tree>
          </field>
          <group>
            <separator string="System Description" colspan="2"/>
            <group>
              <field name="article_description"/>
              <field name="hardware_revision"/>
              <field name="serial_number"/>
              <field name="flat_panel"/>
            </group>
            <group>
              <field name="part_number"/>
              <field name="bios_revision"/>
              <field name="operiating_system"/>
            </group>
          </group>
        </xpath>
      </field>
    </record>
  </data>
</odoo>