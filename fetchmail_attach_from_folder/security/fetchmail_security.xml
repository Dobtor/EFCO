<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="fetchmail_see_rule" model="ir.rule">
            <field name="name">Fetchmail Data Rule</field>
            <field name="model_id" ref="fetchmail.model_fetchmail_server"/>
            <field name="domain_force">['|',('create_uid','=',user.id),('create_uid','=',False)]</field>
            <field name="groups" eval="[(4, ref('base.group_user')),(4, ref('hr.group_hr_user'))]"/>
        </record>
        <record id="fetchmail_see_manager" model="ir.rule">
            <field name="name">Fetchmail Manager</field>
            <field name="model_id" ref="fetchmail.model_fetchmail_server"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4, ref('hr.group_hr_manager'))]"/>
        </record>
    </data>
</odoo>
