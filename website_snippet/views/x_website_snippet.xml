<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="x_website_snippet_view_tree" model="ir.ui.view">
        <field name="name">Building Blocks</field>
        <field name="model">x_website_snippet</field>
        <field name="priority" eval="16"/>
        <field name="arch" type="xml">
            <tree string="Snippet HTML Templates">
                <field name="x_name"/>
            </tree>
        </field>
    </record>

    <record id="x_website_snippet_view_form" model="ir.ui.view">
        <field name="name">Building Blocks</field>
        <field name="model">x_website_snippet</field>
        <field name="priority" eval="16"/>
        <field name="arch" type="xml">
            <form string="Snippet HTML Templates">
                <sheet>
                    <div>
                        This section is strictly meant to be used by a technical person, please read the disclaimer below.<br/>
                        If you are not 100% sure of you code, please add it via website editor interface or consult for a professional assistance.<br/>
                        <br/>
                    </div>
                    <div class="oe_title">
                        <label class="oe_edit_only" for="x_name" string="Name"/>
                        <h1><field name="x_name" placeholder="Name"/></h1>
                    </div>
                    <notebook>
                        <page string="HTML">
                            <field name="x_html"/>
                        </page>
                        <page string="CSS">
                            <field name="x_css"/>
                        </page>
                        <page string="JavaScript">
                            <field name="x_js"/>
                        </page>
                    </notebook>

                    <div>
                        <h3>Disclaimer</h3>
                        Please validate all code so it would pass standards and is syntactically correct. Do not use singe quotes.<br/>
                        If code is not valid, it could break other custom building blocks and in exteme cases whole website.<br/>
                        If you are not 100% sure of you code, please consult for a professional assistance.<br/>
                        The author/seller of the module will not be liable for any loss or damage of any nature.
                        <br/>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record id="act_window_x_website_snippet" model="ir.actions.act_window">
        <field name="name">Building Blocks</field>
        <field name="res_model">x_website_snippet</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">Click to create a new Building Block.</p>
        </field>
    </record>

    <menuitem id="menu_x_website_snippet"
              action="act_window_x_website_snippet"
              parent="website.menu_website_configuration"
              name="My Building Blocks"
              sequence="999"/>

</odoo>