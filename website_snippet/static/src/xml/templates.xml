<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="website_snippet.new">
        <t t-call="web_editor.dialog">
            <t t-set="title">New Building Block</t>
            <t t-set="button">Save</t>
            <form id="ws_new">
                <input placeholder="Title (ex.: Slider Block)" type="text" class="form-control" name="ws_title" required="True"/>
                <br/>
                <div role="tabpanel">
                    <ul class="nav nav-tabs">
                        <li role="presentation" class="active"><a href="#html" aria-controls="html" role="tab" data-toggle="tab">HTML</a></li>
                        <li role="presentation"><a href="#css" aria-controls="css" role="tab" data-toggle="tab">CSS</a></li>
                    </ul>
                </div>

                <div class="tab-content">
                    <div role="tabpanel" class="tab-pane active" id="html">
                        <div id="ws-html-view-editor"/>
                    </div>
                    <div role="tabpanel" class="tab-pane" id="css">
                        <div id="ws-css-view-editor"/>
                    </div>
                </div>
            </form>
        </t>
    </t>

    <t t-name="website_snippet.error">
        <t t-call="web_editor.dialog">
            <t t-set="title">Validation Error</t>
            <t t-set="button">OK</t>
            <p class="errmsg"></p>
        </t>
    </t>
</templates>